<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@color/checkbox_text_color</item>
        <item name="android:button">@drawable/btn_check</item>
    </style>

    <style name="myReadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:button">@drawable/rediobtn_check</item>
        <item name="android:layout_marginTop">@dimen/dp5</item>
        <item name="android:textSize">@dimen/dp20</item>
        <item name="android:drawablePadding">@dimen/dp5</item>

    </style>

    <style name="footbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/dp30</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>

    </style>
    <!--<item name="android:background">@mipmap/bottom_menu_bg</item>-->
    <style name="main_footbar_radio" parent="footbar">
        <item name="android:padding">0dip</item>
    </style>

    <style name="main_footbar_cutline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="UpInAndOutAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_up_in</item>
        <item name="android:windowExitAnimation">@anim/popup_up_out</item>
    </style>

</resources>
