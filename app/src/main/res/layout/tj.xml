<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp25"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginTop="@dimen/dp40"
        android:background="@mipmap/narrow"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp80">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp25">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="@dimen/dp170"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:text="学生姓名："
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="岳文津"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1.0dip"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:background="@mipmap/line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="@dimen/dp170"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:text="注册手机："
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\ 18701269066"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1.0dip"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:background="@mipmap/line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="@dimen/dp170"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:text="所在学校："
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新景小学"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1.0dip"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:background="@mipmap/line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="@dimen/dp170"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:text="所属年级："
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小学六年级"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1.0dip"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:background="@mipmap/line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="@dimen/dp170"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:text="所在区域："
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市东城区东花市"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:background="@mipmap/narrow"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp80"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp25">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="@dimen/dp170"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:text="当前词库："
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="初中词库（1600个）"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1.0dip"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:background="@mipmap/line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="@dimen/dp170"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:text="已识记单词数量："
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_already"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="960个"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1.0dip"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:background="@mipmap/line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="@dimen/dp170"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:text="所用时间："
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_timeused"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="两天"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1.0dip"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:background="@mipmap/line"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="@dimen/dp170"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:text="平均每天记忆数量："
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500个"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1.0dip"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:background="@mipmap/line"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="@dimen/dp170"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:text="剩余单词数量："
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="640个"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1.0dip"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:background="@mipmap/line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="@dimen/dp170"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:text="预计所需时间："
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_timeneed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="两天"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1.0dip"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:background="@mipmap/line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="@dimen/dp170"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:text="检查结果："
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已检查数量0个，正确率100%"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1.0dip"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:background="@mipmap/line"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp25"
            android:layout_marginTop="@dimen/dp10"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="@dimen/dp170"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:text="赢得金币数量："
                android:textColor="#ff000000"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100枚"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1.0dip"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:background="@mipmap/line"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>